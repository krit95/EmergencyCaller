<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <TextView
        android:id="@+id/cName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/contact_name"
        />

    <TextView
        android:id="@+id/phNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cName"
        android:text="@string/phone_number"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emergency_call"
        android:src="@drawable/ic_call_red_24dp"
        android:contentDescription="@string/emergency_call"
        android:layout_alignParentRight="true"
       />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/normal_call"
        android:src="@drawable/ic_call_green_24dp"
        android:contentDescription="@string/normal_call"
        android:layout_toLeftOf="@id/emergency_call"
        />



</RelativeLayout>